<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEEKLY PLANNER"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="@color/white" />

        <!-- Grade com os 7 dias -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="16dp"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Segunda-feira -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@color/pastel_monday"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MONDAY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Add tasks..."
                    android:background="@color/white"
                    android:padding="8dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Terça-feira -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@color/pastel_tuesday"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TUESDAY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Add tasks..."
                    android:background="@color/white"
                    android:padding="8dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Quarta-feira -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@color/pastel_wednesday"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WEDNESDAY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Add tasks..."
                    android:background="@color/white"
                    android:padding="8dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Quinta-feira -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@color/pastel_thursday"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THURSDAY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Add tasks..."
                    android:background="@color/white"
                    android:padding="8dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Sexta-feira -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@color/pastel_friday"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FRIDAY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Add tasks..."
                    android:background="@color/white"
                    android:padding="8dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Sábado -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@color/pastel_saturday"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SATURDAY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Add tasks..."
                    android:background="@color/white"
                    android:padding="8dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Domingo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@color/pastel_sunday"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUNDAY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Add tasks..."
                    android:background="@color/white"
                    android:padding="8dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </GridLayout>

        <!-- Notas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTES:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Write additional notes here..."
            android:background="@color/white"
            android:padding="12dp"
            android:gravity="top"
            android:textSize="16sp"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>
